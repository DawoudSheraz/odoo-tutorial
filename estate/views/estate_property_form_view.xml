<?xml version="1.0"?>
<odoo>
    <!--    View to customize the property form view. -->
    <record
            id="estate_property_form_view"
            model="ir.ui.view"
    >
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
<!--            TODO: disabled="state.lower() == 'sold'", it is causing issues for some reason-->
                    <button type="object" name="mark_property_sold" > Sold </button>
                    <button type="object" name="mark_property_cancelled"> Cancel </button>
<!--   Use statusbar_visible="new, offer_received, offer_accepted, sold" if we want to control which states to show -->
                    <field name="state" readonly="True" widget="statusbar" />
                </header>

                <sheet>
                    <group>
                        <h1>
                            <field name="name" />
                        </h1>
                    </group>
                    <div class="row container">
                        <span class="col-6">
                            <group>
                                <field name="tag_ids" widget="many2many_tags"/>
                                <field name="property_type_id" />
                                <field name="postcode" />
                                <field name="date_availability" />
                            </group>
                        </span>
                        <span class="col-6">
                            <group>
                                <field name="expected_price" />
                                <field name="selling_price" />
                                <field name="best_price" />
                            </group>
                        </span>
                    </div>
<!--                    notebook creates the tabbed view, with each tab encapsulated inside a page elem -->
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="total_area" />
                                <field name="facades" />
                                <field name="garage" />
                            </group>
                        </page>
                        <page string="Garden">
                            <group>
                                <field name="garden" />
                                <!--   invisible can be used to hide or show fields based on other fields' value    -->
                                 <field name="garden_area" invisible="garden == False" />
                                 <field name="garden_orientation" invisible="garden == False" />
                                 <field name="garden_walled" invisible="garden == False"/>
                            </group>
                        </page>
                        <page string="Buy/Sell">
                            <group>
                                <field name="buyer" />
                                <field name="salesperson" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>