<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="model">estate.property_type</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <h1>
                        <field name="name"/>
                    </h1>
                </header>
                <p>
                    <group>
                        <field name="sequence" readonly="True" />
                    </group>
                </p>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    <button
                            class="oe_stat_button"
                            type="action"
                            name="%(estate_property_offer_action)d"
                            icon="fa-money"
                    >
<!--                        We need to wrap the button in button tax, add appropriate info, value, and text classes on values and labels for smart buttons-->
                        <span class="o_stat_info">
                            <span class="o_stat_value">
                                <field name="offer_count"/>
                            </span>
                            <span class="o_stat_text">
                                Offers
                            </span>
                        </span>

                    </button>
                    </div>

                    <notebook>
                        <page string="Properties">
                            <field name="property_ids" >
<!--                                Define which property model fields should be displayed on property type edit form -->
                                <list>
                                    <field name="name"/>
                                    <field name="expected_price"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
