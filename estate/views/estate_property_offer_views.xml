<?xml version="1.0"?>
<!--Creating list and form views without creating any action or menu as this is only intended to be accessed
from property and not via a dedicated menu. -->
<odoo>
    <record
            id="estate_property_offer_list_view"
            model="ir.ui.view"
    >
       <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list
                    editable="bottom"
                    decoration-success="status == 'accepted'"
                    decoration-danger="status == 'refused'"
            >
                <field name="price" />
                <field name="partner_id" />
                <field name="validity"/>
                <field name="deadline_date" />
                <field name="status" optional="hide"/>
                <button type="object" name="mark_offer_accepted" icon="fa-check" string="Accept" invisible="status in ['accepted', 'refused']"/>
                <button type="object" name="mark_offer_refused" icon="fa-close" string="Refuse" invisible="status in ['accepted', 'refused']"/>
            </list>
        </field>
    </record>

     <record
            id="estate_property_offer_form_view"
            model="ir.ui.view"
    >
       <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="status" />
                    <field name="property_id" readonly="True"/>
                    <field name="validity"/>
                    <field name="deadline_date" />
                </group>
            </form>
        </field>
    </record>
</odoo>